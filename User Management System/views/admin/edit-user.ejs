<%- include('../layouts/header.ejs') -%>

<div class="center-div col-md-12 col-12" id="login">
    <div class="container w-50 border py-5 col-md-12 col-12">
        <div class="title pb-5 text-center col-md-12 col-12">
            <h2 class="font-weight-bold">
             Edit User
            </h2>
            
        </div>
        <form action="" method="post" id="submit-form">
           <div class="form-group col-md-12 col-12">
            <input type="name" class="form-control" placeholder="Enter name" value="<%=user.name %>" name="name" id="name-input" required>
            <br>
            <!-- <small class="form-text">Register email address</small> -->
           </div> 
           <div class="form-group col-md-12 col-12">
            <input type="email" class="form-control" name="email" placeholder="Email" value="<%= user.email %>" id="email-input" required>
           </div>
           <br>
           <div class="form-group col-md-12 col-12">
            <input type="text" class="form-control" name="mobno" placeholder="Mobile No" value="<%= user.mobile %>" id="mobno-input" required>
           </div>
           <br>
           <input type="hidden" name="id" value="<%= user._id %>">
           <div class="text-center col-md-12 col-12">
             <button type="submit" class="btn btn-success submit-button rounded mt-4 text-center" id="submit-form">Update</button>
            </div>
            <a href="/admin/home" class="fw-bold">GO BACK</a>
        </form>

        <div class="text-center pt-3"> 

            <% 
    
            if(typeof message !=='undefined'){
    
                %>
                <p class="text-danger fw-bold"><%=message %></p>
                <%
            }
            %>
        </div>
    </div>
</div>



<%- include('../layouts/footer.ejs') -%>

