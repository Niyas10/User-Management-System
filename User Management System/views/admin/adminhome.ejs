<%-include('../layouts/header.ejs') -%>
<div class=" text-center center-div" id="login" >
    <div class=" container w-100 border py-5">

        <h3>Welcome to Dashboard</h3>
        <h5><%= admin.name %></h5>
        <p>Logged in: <span id="datetime"></span></p>
        
        <div class="table-div">
            <table class="w-50 border" style="margin: 0 auto;">
                <tr class="border ">
                    <td class="">Email : </td>
                    <td><%= admin.email %></td>
                </tr>
                <tr>
                    <td class="">Mobile : </td>
                    <td><%= admin.mobile %></td>
                </tr>
                
            </table>
        </div>
        <hr>
        <div class="">
            <h4>Users Details</h4>
            <br>

            <form action="">
                <input type="text" class="rounded" placeholder="Search" name="search">
                <!-- <input type="submit"  value="Search"> -->
                <button title="Search" type="submit" value="Search" class="btn bg-transparent btn-sm mb-1 search-button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                  </svg></button>
            </form>
            <br>
            <table class="w-75 border lh-lg" style="margin: 0 auto;">
              <tr>
                <th class="border">Name</th>
                <th class="border">Email</th>
                <th class="border">Mobile</th>
              </tr>
              
              <% if(users.length>0){
                for(let i=0;i<users.length;i++){ %>
                    <tr class="border">
                        <td class="border"><%= users[i].name %></td>
                        <td class="border"><%= users[i].email %></td>
                        <td class="border"><%= users[i].mobile %></td>
                        <td><a title="Edit" href="/admin/edit-user?id=<%= users[i]._id %>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                          </svg></a>
                          
                        </td>
                        <td><a title="Delete" href="/admin/delete-user?id=<%= users[i]._id %>" onclick="return confirm('Are you sure you want to delete <%=users[i].name%>')"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                          </svg></a></td>
                    </tr>
    
               <% } 
              }else{ %>

                <tr>
                    <td colspan="5">Users not found</td>
                </tr>


              <% } %>
            </table>
          </div>
          <br>
          <a href="/admin/new-user" class="fw-bold">ADD USER</a>
            <br>
        <br>

        <!-- <form action="/route/logout" method="POST"><button type="submit" class="btn btn-danger">Log Out</button></form> -->
        <form method="post" action="/admin/logout">
            
            <button type="submit" class="btn btn-danger">Log Out</button>
        </form>
    </div>


</div>
<script>
     var currentDateTime = new Date();

// Format the date and time as a string
    var formattedDateTime = currentDateTime.toLocaleString();

    // Update the element's content with the formatted date and time
    document.getElementById("datetime").textContent = formattedDateTime;
</script>

<%-include('../layouts/footer.ejs') -%>